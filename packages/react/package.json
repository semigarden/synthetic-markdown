{
    "name": "synthetic-md-react",
    "version": "0.0.16",
    "description": "A UI primitive for unified Markdown editing and rendering",
    "license": "MIT",
    "author": {
        "name": "semigarden",
        "url": "https://github.com/semigarden"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/semigarden/synthetic-md.git",
        "directory": "synthetic-md/packages/react"
    },
    "bugs": {
        "url": "https://github.com/semigarden/synthetic-md/issues"
    },
    "homepage": "https://github.com/semigarden/synthetic-md#readme",
    "type": "module",
    "publishConfig": {
        "access": "public"
    },
    "sideEffects": false,
    "main": "./dist/index.cjs.js",
    "module": "./dist/index.esm.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.esm.js",
            "require": "./dist/index.cjs.js"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsup src/index.ts --format esm,cjs --dts",
        "dev": "tsup src/index.ts --watch --format esm,cjs --dts",
        "typecheck": "tsc -p tsconfig.json --noEmit",
        "lint": "eslint .",
        "prepublishOnly": "npm run build"
    },
    "peerDependencies": {
        "react": "^19.2.0",
        "synthetic-md": "^0.0.23"
    },
    "devDependencies": {
        "@types/react": "^19.2.9",
        "react": "^19.2.0",
        "tsup": "^8.0.0",
        "typescript": "^5.3.0"
    }
}
